{
  "name": "wordcloud-sbpc",
  "version": "1.0.0",
  "description": "Word Cloud SBPC - Interactive word cloud application",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [
    "wordcloud",
    "interactive",
    "d3"
  ],
  "author": "Felipe Brito",
  "license": "MIT",
  "main": "main.js",
  "devDependencies": {
    "electron": "^37.2.1",
    "electron-builder": "^24.14.3"
  },
  "build": {
    "appId": "com.wordcloud.sbpc",
    "productName": "Word Cloud SBPC",
    "files": [
      "**/*",
      "!venv-fonts/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "icon": "assets/icon.png"
    },
    "win": {
      "icon": "assets/icon.png"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}
